<!-- Page Header-->
<header
  class="masthead"
  style="background-image: url('assets/img/home-bg.jpg')"
>
  <div class="container position-relative px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="site-heading">
          <h1>Clean Blog</h1>
          <span class="subheading">A Blog Theme by Start Bootstrap</span>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
  <div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
      <% for (var i = 0; i < posts.length; i++) { %>
      <!--  Post preview-->
      <div class="post-preview">
        <a href="/post/<%= posts[i]._id %>">
          <h2 class="post-title"><%= posts[i].title %></h2>
          <h3 class="post-subtitle"><%= posts[i].description %></h3>
        </a>
        <p class="post-meta">
          Posted by
          <!-- userid connects the user to the post from -->
          <!-- homePage.js controller & storePost.js controller -->
          <a href="#"> <%= posts[i].userid.username %> </a>
          on <%= posts[i].datePosted.toDateString() %>
        </p>
      </div>

      <hr class="my-4" />

      <% } %>

      <!-- Pager-->
      <div class="d-flex justify-content-end mb-4">
        <a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a>
      </div>
    </div>
  </div>
</div>
